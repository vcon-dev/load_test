# vCon Server Load Test Application - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# Core vCon Server Configuration
# =============================================================================

# vCon Server URL (default: http://localhost:8000)
CONSERVER_URL=http://localhost:8000

# API token for authentication (default: test-token)
CONSERVER_TOKEN=test-token

# =============================================================================
# Test Configuration
# =============================================================================

# Directory to save test results (default: ./test_output)
# Note: This directory will be created automatically if it does not exist
TEST_DIRECTORY=./test_output

# Port for webhook server (default: 8080)
WEBHOOK_PORT=8080

# Path to sample vCon files (default: ./sample_data)
# Note: You need to provide your own sample vCon files
SAMPLE_VCON_PATH=./sample_data

# =============================================================================
# Load Test Parameters
# =============================================================================

# Requests per second (default: 10)
RATE=10

# Total number of requests (default: 100)
AMOUNT=100

# Test duration in seconds (default: 60)
DURATION=60

# =============================================================================
# JLINC Tracer Configuration
# =============================================================================

# Enable JLINC tracer (true/false, default: false)
JLINC_ENABLED=false

# JLINC Data Store API URL (default: http://jlinc-server:9090)
JLINC_DATA_STORE_API_URL=http://jlinc-server:9090

# JLINC Data Store API Key
JLINC_DATA_STORE_API_KEY=ZDU5ZWIxMzc0ZDhjOThlNTRkNTYxYzc1Y

# JLINC Archive API URL (default: http://jlinc-server:9090)
JLINC_ARCHIVE_API_URL=http://jlinc-server:9090

# JLINC Archive API Key
JLINC_ARCHIVE_API_KEY=NTFhZGRjNzA0MjFlY2ZiYmFiMGU3MjQ2M

# JLINC System Prefix (default: VCONTest)
JLINC_SYSTEM_PREFIX=VCONTest

# JLINC Agreement ID (default: 00000000-0000-0000-0000-000000000000)
JLINC_AGREEMENT_ID=00000000-0000-0000-0000-000000000000

# Hash event data in JLINC (true/false, default: true)
JLINC_HASH_EVENT_DATA=true

# Send vCon to DLQ on error (true/false, default: true)
JLINC_DLQ_VCON_ON_ERROR=true

# =============================================================================
# Configuration Management
# =============================================================================

# Restore original conserver configuration after test (true/false, default: true)
RESTORE_CONFIG=true

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL, default: INFO)
LOG_LEVEL=INFO

# =============================================================================
# Notes
# =============================================================================
#
# 1. All values above are defaults and can be overridden via command line
# 2. Sensitive values like API keys should be kept secure and not committed
# 3. JLINC configuration is optional and only used when JLINC_ENABLED=true
# 4. Make sure your vCon Server is running and accessible at CONSERVER_URL
# 5. Ensure sample vCon files are available in SAMPLE_VCON_PATH directory
#    (You need to provide your own sample vCon files)
#
